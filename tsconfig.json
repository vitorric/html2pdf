{
    "compilerOptions": {
      "target": "es2017",                          
      "module": "commonjs", 
      "lib": ["es2017", "dom"],
      "outDir": "./dist",
      "declaration": true,
      "declarationDir": "dist/types",
      "rootDir": "./src",
      "allowJs": true,          
      "removeComments": true,       
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],                     
      "resolveJsonModule": true,      
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "pretty": true,
      "baseUrl": "."
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src/**/*.ts"]
  }
  